<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="#80cbc4"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <TextView
        android:id="@+id/tv_healthy_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_titlebar_play"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_titlebar_play"
        android:gravity="start|center_vertical"
        android:padding="10dp"
        android:text="@string/str_hiboard_play_tip"
        android:textColor="#000000" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_apps_recently"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>